---
# Ant-related variables
#
# @note need to be included explicitly by "vars_file"
#
# @see http://xmodulo.com/2013/03/how-to-install-apache-ant-on-centos.html
#


#
# source
#

ant_version: 1.9.3
ant_tarball_file: apache-ant-$ant_version-bin.tar.gz
ant_tarball_url: http://www.apache.org/dist/ant/binaries/$ant_tarball_file


#
# deployment
#

ant_parent_path: /opt
ant_install_path: $ant_parent_path/apache-ant-$ant_version
ant_symlink_path: $ant_parent_path/ant
ant_exe_path: /usr/local/bin


#
# build
#

ant_download_path: /tmp
